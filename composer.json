{
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.*",
		"squizlabs/php_codesniffer": "1.*"
	},
	"scripts": {
		"test": [
			"parallel-lint --exclude vendor --exclude node_modules .",
			"phpcs . --standard=./test/codesniffer --ignore=vendor/*,node_modules/* --extensions=php --tab-width=4"
		]
	}
}
