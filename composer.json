{
	"require": {
		"php": ">=7.1"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "^1.0.0",
		"squizlabs/php_codesniffer": "^3.4.0",
		"phpunit/phpunit": "^7.5.1"
	},
	"autoload": {
		"psr-0": {
			"": "inc/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint --exclude vendor --exclude node_modules .",
			"phpunit",
			"phpcs -p -s"
		]
	}
}
