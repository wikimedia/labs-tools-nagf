{
	"require": {
		"php": ">=5.6"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"squizlabs/php_codesniffer": "3.2.2",
		"phpunit/phpunit": "^5.7.27"
	},
	"autoload": {
		"psr-0": {
			"": "inc/"
		}
	},
	"scripts": {
		"test": [
			"parallel-lint --exclude vendor --exclude node_modules .",
			"phpunit",
			"phpcs -p -s"
		]
	}
}
